<Window x:Class="ProjektWłasny.ConvertCurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Convert Currency" Height="300" Width="400">
    <Grid Background="#FF6EFFD4">
        <TextBlock Text="Amount:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="AmountTextBox" Width="100" Margin="195,10,105,0" VerticalAlignment="Top"/>

        <TextBlock Text="From Currency:" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <ComboBox Name="FromCurrencyComboBox" Width="100" Margin="100,50,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="To Currency:" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <ComboBox Name="ToCurrencyComboBox" Width="100" Margin="100,90,10,0" VerticalAlignment="Top"/>

        <Button Content="Convert" Width="80" Margin="10,130,10,0" VerticalAlignment="Top" Click="Convert_Click" Background="#FF2F36A2" Foreground="White"/>
        <TextBlock Name="ResultTextBlock" VerticalAlignment="Top" Margin="10,170,10,0"/>
    </Grid>
</Window>
